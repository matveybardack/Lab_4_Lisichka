<Window x:Class="WpfAppBoolTable.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Логические функции — ЛР4" Height="780" Width="980">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontWeight" Value="Semibold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="5"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF2897FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF1E70C1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="RadioButton">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>


    <TabControl>
        <!-- Вкладка: По номеру -->
        <TabItem Header="По номеру">
            <ScrollViewer>
                <StackPanel Margin="12" >

                    <!-- Ввод параметров -->
                    <GroupBox Header="Ввод параметров" Margin="0,0,0,8">
                        <StackPanel Margin="10">
                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="Количество переменных (n):" VerticalAlignment="Center"/>
                                <xctk:IntegerUpDown x:Name="InputN" Minimum="1" Maximum="5" Value="1"
                                                    Width="80" Margin="8,0"/>
                                <TextBlock Text="(максимум 5)" Foreground="Gray" VerticalAlignment="Center" Margin="8,0"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,6">
                                <TextBlock Text="Номер функции (num):" VerticalAlignment="Center"/>
                                <xctk:LongUpDown x:Name="InputNum" Minimum="0" Maximum="4294967295" Value="0" 
                                                 Width="110" Margin="8,0"/>
                            </StackPanel>

                            <!-- Кнопки -->
                            <StackPanel Orientation="Horizontal" Margin="0,8">
                                <Button Content="Таблица истинности" Click="BuildTruthTable" />
                                <Button Content="DNF" Click="BuildDNF"/>
                                <Button Content="KNF" Click="BuildKNF"/>
                                <Button Content="Пресет (n=3, num=11)" Click="Preset_Number_1"/>
                            </StackPanel>

                            <!-- "Озвучка" символов -->
                            <TextBlock Margin="0,6" Foreground="Gray">
                                Операции: ! — НЕ, &amp; — И, | — ИЛИ, ^ — XOR, -> — импликация, = — эквиваленция.
                            </TextBlock>
                        </StackPanel>
                    </GroupBox>

                    <!-- Результаты -->
                    <GroupBox Header="Результаты" Margin="0,0,0,8">
                        <StackPanel Margin="10">
                            <TextBlock Text="Таблица истинности:" FontWeight="Bold"/>
                            <DataGrid x:Name="TruthTableGrid"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      Height="240"
                                      Margin="0,6"
                                      AlternatingRowBackground="#FFEFEFEF"
                                      FontFamily="Consolas"/>

                            <TextBlock Text="Двоичное представление функции (от младшего к старшему биту):" FontWeight="Bold" Margin="0,6,0,2"/>
                            <TextBox x:Name="BinaryExplanation" Margin="0,3,0,10"/>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="DNF:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <Button Content="Скопировать DNF" Click="CopyDNF_Click"/>
                            </StackPanel>
                            <TextBox x:Name="OutputDNF"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     IsReadOnly="True"
                                     FontFamily="Consolas"
                                     Margin="0,5,0,10"
                            />

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="KNF:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <Button Content="Скопировать KNF" Click="CopyKNF_Click"/>
                            </StackPanel>
                            <TextBox x:Name="OutputKNF"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     IsReadOnly="True"
                                     FontFamily="Consolas"
                                     Margin="0,5,0,10"
                            />

                            <TextBlock x:Name="CountInfo" Foreground="Gray" Margin="0,6"/>
                            <TextBlock Text="При больших n время вычисления растёт экспоненциально (O(2ⁿ))"
                                       Foreground="Gray" FontStyle="Italic" Margin="0,6"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!-- Вкладка: По формуле -->
        <TabItem Header="По формуле">
            <ScrollViewer>
                <StackPanel Margin="12">
                    <GroupBox Header="Ввод формулы" Margin="0,0,0,8">
                        <StackPanel Margin="10">
                            <TextBlock Text="Формула (пример: (x1 | x2) -> x3)" />
                            <TextBox x:Name="InputFormula" Width="680" Height="30" Margin="0,4,0,4" HorizontalAlignment="Left"/>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Разобрать и вычислить" Click="ParseFormula_Click" />
                                <Button Content="Пресет: (x1 | x2) -> x3" Click="Preset_Formula_Implication" />
                            </StackPanel>
                            <TextBlock Foreground="Gray" Margin="0,8,0,0">
                                Операции: ! — НЕ, &amp; — И, | — ИЛИ, ^ — XOR, -> — импликация, = — эквиваленция.
                            </TextBlock>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="Результаты" Margin="0,0,0,8">
                        <StackPanel Margin="10">
                            <TextBlock Text="Таблица истинности:" FontWeight="Bold"/>
                            <DataGrid x:Name="FormulaTableGrid"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      Height="240"
                                      Margin="0,6"
                                      AlternatingRowBackground="#FFEFEFEF"
                                      FontFamily="Consolas"/>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,6">
                                <TextBlock Text="DNF:" FontWeight="Bold" VerticalAlignment="Center"/>
                                <Button Content="Скопировать DNF" Click="CopyFormulaDNF_Click" />
                            </StackPanel>
                            <TextBox x:Name="FormulaDNF"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     IsReadOnly="True"
                                     FontFamily="Consolas"
                                     Margin="0,5,0,10"
                            />
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="KNF:" FontWeight="Bold" VerticalAlignment="Center"/>
                                <Button Content="Скопировать KNF" Click="CopyFormulaKNF_Click" />
                            </StackPanel>
                            <TextBox x:Name="FormulaKNF"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     IsReadOnly="True"
                                     FontFamily="Consolas"
                                     Margin="0,5,0,10"
                            />
                            <TextBlock x:Name="FormulaCountInfo" Foreground="Gray" Margin="0,6"/>
                            <TextBlock Text="При больших n время вычисления растёт экспоненциально (O(2ⁿ))" 
                                       Foreground="Gray" FontStyle="Italic" Margin="0,6"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <!--  Вкладка: Сравнение -->
        <TabItem Header="Сравнение">
            <ScrollViewer>
                <StackPanel Margin="12">
                    <GroupBox Header="Функция A" Margin="0,0,0,8">
                        <StackPanel Margin="10">
                            <StackPanel Orientation="Horizontal">
                                <RadioButton x:Name="ARadioByNumber" Content="По номеру" IsChecked="True" Margin="0,0,12,0"/>
                                <RadioButton x:Name="ARadioByFormula" Content="По формуле"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,8">
                                <TextBlock Text="n:" VerticalAlignment="Center"/>
                                <xctk:IntegerUpDown x:Name="A_n" Minimum="1" Maximum="5" Value="1" Width="80" Margin="6,0"/>
                                <TextBlock Text="num:" VerticalAlignment="Center" Margin="12,0,0,0"/>
                                <xctk:LongUpDown x:Name="A_num" Minimum="0" Maximum="4294967295" Value="0" 
                                                 Width="150" Margin="6,0" />
                            </StackPanel>

                            <TextBlock Text="Формула:" Margin="0,6,0,0"/>
                            <TextBox x:Name="A_formula" Width="650" Height="28" Margin="0,2" HorizontalAlignment="Left"/>
                            <!-- "Озвучка" символов -->
                            <TextBlock Margin="0,6" Foreground="Gray">
                                Операции: ! — НЕ, &amp; — И, | — ИЛИ, ^ — XOR, -> — импликация, = — эквиваленция.
                            </TextBlock>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="Функция B" Margin="0,0,0,8">
                        <StackPanel Margin="10">
                            <StackPanel Orientation="Horizontal">
                                <RadioButton x:Name="BRadioByNumber" Content="По номеру" IsChecked="True" Margin="0,0,12,0"/>
                                <RadioButton x:Name="BRadioByFormula" Content="По формуле"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,8">
                                <TextBlock Text="n:" VerticalAlignment="Center"/>
                                <xctk:IntegerUpDown x:Name="B_n" Minimum="1" Maximum="5" Value="1" Width="80" Margin="6,0"/>
                                <TextBlock Text="num:" VerticalAlignment="Center" Margin="12,0,0,0"/>
                                <xctk:LongUpDown x:Name="B_num" Minimum="0" Maximum="4294967295" Value="0" 
                                                 Width="150" Margin="6,0"/>
                            </StackPanel>

                            <TextBlock Text="Формула:" Margin="0,6,0,0"/>
                            <TextBox x:Name="B_formula" Width="650" Height="28" Margin="0,2" HorizontalAlignment="Left"/>
                            <!-- "Озвучка" символов -->
                            <TextBlock Margin="0,6" Foreground="Gray">
                                Операции: ! — НЕ, &amp; — И, | — ИЛИ, ^ — XOR, -> — импликация, = — эквиваленция.
                            </TextBlock>
                        </StackPanel>
                    </GroupBox>

                    <StackPanel Orientation="Horizontal" Margin="0,6">
                        <Button Content="Эквивалентны?" Click="CompareFunctions_Click" />
                        <Button Content="Пресет сравнения" Click="Preset_Compare_Example" />
                    </StackPanel>

                    <TextBlock x:Name="CompareResult" FontSize="16" FontWeight="Bold" Margin="8"/>
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Таблица A -->
                        <StackPanel Grid.Column="0" Margin="5">
                            <TextBlock Text="Таблица истинности функции A:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <DataGrid x:Name="CompareTableA"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      Height="200"
                                      AlternatingRowBackground="#FFEFEFEF"
                                      FontFamily="Consolas"/>
                        </StackPanel>

                        <Separator Grid.Column="1" Width="20"/>

                        <!-- Таблица B -->
                        <StackPanel Grid.Column="2" Margin="5">
                            <TextBlock Text="Таблица истинности функции B:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <DataGrid x:Name="CompareTableB"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      Height="200"
                                      AlternatingRowBackground="#FFEFEFEF"
                                      FontFamily="Consolas"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="При больших n время вычисления растёт экспоненциально (O(2ⁿ))" 
                               Foreground="Gray" FontStyle="Italic" Margin="8"/>
                </StackPanel>
            </ScrollViewer>
        </TabItem>
    </TabControl>
</Window>